<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_header_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <ImageView
            android:id="@+id/iv_header_imge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ceshi1101"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_header_imge"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" >

        

            <TextView
                android:id="@+id/tv_qiangou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_exchange_item_buy_icon"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="抢购" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_header_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2.5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_header_imge1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ceshi1101"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_header_imge1"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp" >

              

                <TextView
                    android:id="@+id/tv_qiangou1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_exchange_item_buy_icon"
                    android:focusable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="抢购" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_header_imge2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ceshi1101"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_header_imge2"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp" >

               

                <TextView
                    android:id="@+id/tv_qiangou2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_exchange_item_buy_icon"
                    android:focusable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="抢购" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_header_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2.5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_header_imge3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ceshi1101"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_header_imge3"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp" >

              
                <TextView
                    android:id="@+id/tv_qiangou3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_exchange_item_buy_icon"
                    android:focusable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="抢购" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_header_imge4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ceshi1101"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_header_imge4"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp" >

              

                <TextView
                    android:id="@+id/tv_qiangou4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_exchange_item_buy_icon"
                    android:focusable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="抢购" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>