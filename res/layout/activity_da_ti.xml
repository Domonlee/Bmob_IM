<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/layout_money_topbar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#50C0A7"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/menu_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="9"
            android:gravity="center"
            android:text="答题"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_shop_top_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shop_top_share" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_dati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_money_topbar"
        android:background="#C6C6C6"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:padding="5dp" >
    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp" >

        <TextView
            android:id="@+id/tv_dati_tijiao"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#887F7F7F"
            android:gravity="center_horizontal|center_vertical"
            android:text="提交" />
    </LinearLayout>

</RelativeLayout>