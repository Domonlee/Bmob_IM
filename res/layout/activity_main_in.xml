<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bmob.im.demo.ui.MainInActivity" >

    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#909090" 
        android:layout_above="@+id/layout_bottombar" >
    </TextView>

    <!-- the bottom tab -->
    <LinearLayout
        android:id="@+id/layout_bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#E0E0E0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_bm_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/btn_bm_shop_selector"
            android:onClick="onTabSelect"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:scaleType="matrix"
            android:background="#00000000"
            android:text="@string/main_bottom_shop" 
            android:textColor="@drawable/tab_textcolor"
            android:textSize="12sp" />
        
        <Button
            android:id="@+id/btn_bm_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/btn_bm_money_selector"
            android:onClick="onTabSelect"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:scaleType="matrix"
            android:background="#00000000"
            android:text="@string/main_bottom_money" 
            android:textColor="@drawable/tab_textcolor"
            android:textSize="12sp"
            ></Button>
        
        <Button
            android:id="@+id/btn_bm_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/btn_bm_find_selector"
            android:onClick="onTabSelect"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:scaleType="matrix"
            android:background="#00000000"
            android:text="@string/main_bottom_find" 
            android:textColor="@drawable/tab_textcolor"
            android:textSize="12sp"
            ></Button>
        
         <Button
            android:id="@+id/btn_bm_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/btn_bm_group_selector"
            android:onClick="onTabSelect"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:background="#00000000"
            android:scaleType="matrix"
            android:text="@string/main_bottom_group" 
            android:textColor="@drawable/tab_textcolor"
            android:textSize="12sp"
            ></Button>
        
    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/fragment_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@id/layout_bottombar"
        ></RelativeLayout>

</RelativeLayout>