<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_exchange_item_pic"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dip"
        android:scaleType="fitXY"
        android:src="@drawable/exchange_item_pic" />

    <TextView
        android:id="@+id/tv_exchange_item_goodsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/iv_exchange_item_pic"
        android:text="商品名称"
        android:textColor="#000000"
        android:textSize="18sp" />
    
    <TextView
        android:id="@+id/tv_exchange_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/iv_exchange_item_pic"
        android:layout_below="@id/tv_exchange_item_goodsname"
        android:text="商品简介"
        android:textColor="#868686"
        android:textSize="15sp" />
    
     <ImageButton 
        android:id="@+id/ibtn_left_menu_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/left_menu_top_back"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="15dip"
        />

</RelativeLayout>