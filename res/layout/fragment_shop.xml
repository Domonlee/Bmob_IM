<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.bmob.im.demo.ui.fragment.ShopFragment" >

    <!-- the shop top bar -->
    <LinearLayout 
        android:id="@+id/layout_shop_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#50C0A7"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/menu_icon" />
        
        <TextView 
            android:id="@+id/tv_shop_top_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shop_top_1_selector"
            android:layout_weight="2"
            android:onClick="ontTabSelect"
            android:text="团购 "
            android:textSize="15sp"
            android:textColor="@drawable/shop_top_text_color_selector"
            />
        
        <TextView 
            android:id="@+id/tv_shop_top_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            android:onClick="ontTabSelect"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shop_top_2_selector"
            android:textColor="@drawable/shop_top_text_color_selector"
            android:text="限时抢"
            android:textSize="15sp"
            />

        <TextView 
            android:id="@+id/tv_shop_top_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            android:onClick="ontTabSelect"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shop_top_3_selector"
            android:text="积分兑换"
            android:textSize="15sp"
            android:textColor="@drawable/shop_top_text_color_selector"
            />
        
        <TextView 
            android:id="@+id/tv_shop_top_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shop_top_share"
            android:layout_weight="1"
            />

    </LinearLayout>
    
    <!-- the location tab -->
    <LinearLayout 
        android:id="@+id/layout_locationbar"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="#00000000"
        android:orientation="horizontal"
        android:paddingTop="5dip"
        android:layout_marginTop="5dip"
        android:layout_below="@id/layout_shop_topbar"
        >
        <TextView 
            android:id="@+id/btn_shop_location_myloca"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dip"
            android:onClick="onlTabSelect"
            android:drawableLeft="@drawable/btn_shop_location_myloca_selector"
            android:text="我的位置"
            android:textColor="@drawable/shop_location_text_color_selector"
            android:textSize="14sp"
            />
        <TextView 
            android:id="@+id/btn_shop_location_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onlTabSelect"
            android:drawableLeft="@drawable/btn_shop_location_sort_selector"
            android:text="智能排序"
            android:textColor="@drawable/shop_location_text_color_selector"
            android:textSize="14sp"
            />
        <TextView 
            android:id="@+id/btn_shop_location_range"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onlTabSelect"
            android:drawableLeft="@drawable/btn_shop_location_range_selector"
            android:text="范围"
            android:textColor="@drawable/shop_location_text_color_selector"
            android:textSize="14sp"
            />
        
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#50C0A7" 
        android:layout_below="@id/layout_locationbar"
        ></TextView>
    
    <RelativeLayout 
        android:id="@+id/shop_fragment_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/layout_shop_topbar"
        ></RelativeLayout>

</RelativeLayout>
